<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="Item Name:"
        android:fontFamily="@font/telorbistik"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tvName"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telorbistik"
        android:layout_toEndOf="@id/tvNameLabel"
        android:layout_alignBaseline="@id/tvNameLabel"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvSizeLabel"
        android:layout_width="wrap_content"
        android:textColor="#FF0000"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telorbistik"
        android:layout_below="@id/tvName"
        android:text="Item Size:"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:fontFamily="@font/telorbistik"
        android:textColor="#FF0000"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvSizeLabel"
        android:textSize="22sp"
        android:layout_alignBaseline="@id/tvSizeLabel"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvColourLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telorbistik"
        android:textColor="#FF0000"
        android:layout_below="@id/tvSize"
        android:text="Item Colour:"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tvColour"
        android:layout_width="wrap_content"
        android:textColor="#FF0000"
        android:fontFamily="@font/telorbistik"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_toEndOf="@id/tvColourLabel"
        android:layout_alignBaseline="@id/tvColourLabel"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_below="@id/tvColour"
        android:fontFamily="@font/telorbistik"
        android:text="Item Price: RM"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:fontFamily="@font/telorbistik"
        android:textColor="#FF0000"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvPriceLabel"
        android:layout_alignBaseline="@id/tvPriceLabel"
        android:text="TextView" />
</RelativeLayout>
