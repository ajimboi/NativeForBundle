<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.redhouseproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RedHouseProject">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RedHouseProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add the MainActivity declaration -->
        <activity android:name=".MainActivity" />

        <activity android:name=".ItemListActivity" />
        <activity android:name=".NewItemActivity" />
        <activity android:name=".ItemDetailActivity"/>
        <activity android:name=".UpdateItemActivity" />
        <activity android:name=".SearchItemActivity" />

    </application>
</manifest>
